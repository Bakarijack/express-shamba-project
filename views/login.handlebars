<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12"></div>
        <div class="col-lg-6 col-md-6 col-sm-12">
            <h1>Log in</h1>
            <form id="login_form">
                <div class="form-group mt-2">
                    <label for="fieldEmail" class="control-label">Email</label>
                    <div>
                        <input type="email" class="form-control" required id="user_email" name="email">
                    </div>
                </div>
                <div class="form-group mt-2">
                    <label for="password" class="control-label">Password</label>
                    <div>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                </div>
                <div class="form-group mt-5">
                    <div>
                        <button class="col-lg-12 col-md-12 col-sm-12 btn btn-success" type="submit">Login</button>
                    </div>
                </div>
            </form>
        </div>

    </div>

</div>